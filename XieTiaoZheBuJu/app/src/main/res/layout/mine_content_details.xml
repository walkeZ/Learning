<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:padding="14dp">
    <ImageView
        android:id="@+id/first_details_img"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:padding="5dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/first_details_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="19sp"
            android:enabled="true"
            android:maxLines="2"
            android:text="Prime特惠！Tommy Hilfiger Elaine 女士手提单肩包"/>
        <TextView
            android:id="@+id/first_details_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="￥290.38"
            android:textSize="18sp"
            android:textColor="#FD7A0F"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/first_details_source"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="美国亚马逊|28分钟前"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/first_test"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/first_details_source"
                android:text="type"
                android:layout_marginLeft="12dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/first_details_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="1"
                android:gravity="center"
                android:drawableLeft="@mipmap/ic_main_comment2"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/first_details_zan"
                android:layout_toLeftOf="@id/first_details_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="6"
                android:gravity="center"
                android:drawableLeft="@mipmap/ic_main_good2"
                android:textSize="12sp"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>