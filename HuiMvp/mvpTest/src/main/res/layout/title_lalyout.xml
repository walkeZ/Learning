<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/tl_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/tl_ivLeft"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:padding="13dp"
            android:scaleType="fitStart"
            android:src="@android:drawable/ic_menu_recent_history"
            android:visibility="invisible" />
        <!--android:layout_marginTop="25dp"-->

        <FrameLayout
            android:id="@+id/tl_fl_right"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">
            <!--android:layout_marginTop="25dp"-->
            <ImageView
                android:id="@+id/tl_iv_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:src="@mipmap/ic_launcher"
                android:padding="13dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/textBlack"
                android:textSize="16sp"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tl_tv_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tl_fl_right"
            android:layout_toRightOf="@id/tl_ivLeft"
            android:gravity="center"
            android:text="123456"
            android:textColor="#333333"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever" />
        <!--android:layout_marginTop="25dp"-->
        <!--android:textStyle="bold"-->
    </RelativeLayout>


</LinearLayout>