<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_backgroud"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/black"
        android:clickable="false"
        android:text="提示"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/duv_dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="当前版本已禁用,请更新至1.0.1版本"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />
    <TextView
        android:id="@+id/duv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:lineSpacingExtra="3dp"
        android:textSize="13sp"
        android:textColor="@color/textBlack"
        android:layout_marginTop="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight_View"
        android:background="@color/dialog_line"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/duv_leftButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:text="取消"
            android:textColor="@color/textBlue"
            android:padding="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_width="@dimen/lineHeight_View"
            android:layout_height="match_parent"
            android:background="@color/dialog_line" />
        <Button
            android:id="@+id/duv_rightButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:text="确定"
            android:textColor="@color/textBlue"
            android:padding="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
</LinearLayout>