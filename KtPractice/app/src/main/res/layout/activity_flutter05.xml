<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="22dp"
    >
    <TextView
        android:id="@+id/flutter05_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Flutter05Act BasicMessageChannel"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <FrameLayout
        android:id="@+id/flutter05_flContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/flutter05_tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"
        android:background="#7285B0EF"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flutter05_fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@android:drawable/ic_input_add"
        android:background="@color/cardview_dark_background"
        />


</androidx.constraintlayout.widget.ConstraintLayout>