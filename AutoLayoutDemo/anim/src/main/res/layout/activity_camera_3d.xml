<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="XZY旋转(单位：角度，范围0~360)"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X轴:"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbarXRotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="360"/>
        <TextView
            android:id="@+id/txtXRotate"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0°"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Y轴:"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbarYRotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="360"/>
        <TextView
            android:id="@+id/txtYRotate"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0°"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Z轴:"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbarZRotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="360"/>
        <TextView
            android:id="@+id/txtZRotate"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0°"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="XY轴倾斜"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X轴:"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbarXSkew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progress="100"
            android:max="200"/>
        <TextView
            android:id="@+id/txtXSkew"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Y轴:"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbarYSkew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progress="100"
            android:max="200"/>
        <TextView
            android:id="@+id/txtYSkew"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="XY轴倾斜"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X轴:"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbarZTranslate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progress="100"
            android:max="200"/>
        <TextView
            android:id="@+id/txtZTranslate"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/qzone"
            android:scaleType="fitCenter"
            android:background="#ff0900"/>
        <ImageView
            android:id="@+id/imgResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/qzone"
            android:scaleType="fitCenter"
            android:background="#7bff00"/>
    </LinearLayout>

</LinearLayout>