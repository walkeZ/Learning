<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_corners"
    android:padding="6dp">

    <ImageView
        android:id="@+id/lig_img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lig_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="正宗梅菜扣肉，聪厨梅菜扣肉干，家宴常备方便菜虎皮红烧肉 2盒包邮 13 收藏下单还有豉汁排骨、鱼香茄子等秘制配料赠送"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/lig_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#f00"
            android:text="包邮"/>

        <TextView
            android:id="@+id/lig_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="特卖商场"/>

        <TextView
            android:id="@+id/lig_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/lig_title"
            android:layout_above="@id/lig_express"
            android:gravity="center_vertical"
            android:text="￥19.90"
            android:textColor="#f00"/>

        <TextView
            android:id="@+id/lig_oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/lig_title"
            android:layout_above="@id/lig_express"
            android:layout_toRightOf="@id/lig_price"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="￥39.90"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/lig_Id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lig_title"
            android:layout_above="@id/lig_express"
            android:layout_toRightOf="@id/lig_oldPrice"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="数据库id: "
            android:textColor="#005dff"
            android:textSize="14sp"/>

        <!-- sell的过去是sold -->
        <TextView
            android:id="@+id/lig_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lig_express"
            android:layout_toLeftOf="@id/lig_type"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="已售1354件"/>


    </RelativeLayout>


</LinearLayout>