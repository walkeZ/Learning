<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/main_etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#6A77B3F4"
        android:hint="数据"
        android:inputType="number"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:text="1245"
        app:layout_constraintTop_toBottomOf="@id/main_desc" />

    <Button
        android:id="@+id/main_btConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="#6A77B3F4"
        android:text="Convert"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_etData" />

    <Button
        android:id="@+id/main_btCatOrDog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="#6A77B3F4"
        android:text="Cat or Dog"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_btConvert" />

    <Button
        android:id="@+id/main_btHet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="#6A77B3F4"
        android:text="Het"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_btCatOrDog" />

</androidx.constraintlayout.widget.ConstraintLayout>